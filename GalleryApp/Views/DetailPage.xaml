<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GalleryApp.Views.DetailPage">

    <ScrollView>
        <VerticalStackLayout>
            <Image Source="{Binding Photo.RegularUrl}" Aspect="Fill"/>
            <Label Text="{Binding Photo.AuthorName}"/>
            <Label Text="{Binding Photo.AuthorLink}"/>
            <Button Text="Back to feed" Command="{Binding GoBackCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>